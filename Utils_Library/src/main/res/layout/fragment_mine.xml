<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.fragment.MineFragment">
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:layout_width="match_parent"
        android:id="@+id/refresh"
        android:layout_height="match_parent">
        <com.scwang.smartrefresh.header.WaveSwipeHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:background="@mipmap/icon_dingbujuxing_mine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.cj.splicing.utils.widget.RoundImageView
            android:layout_marginTop="30dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/app_icon"
            app:type="circle"
            android:id="@+id/iv_icon"
            />
        <TextView
            android:id="@+id/iv_name"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小菜鸡"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="18sp"
            />
    </LinearLayout>
    <LinearLayout
        android:paddingEnd="15dp"
        android:paddingStart="15dp"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:background="#1F2714"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginBottom="15dp"
            android:layout_marginTop="40dp"
            android:id="@+id/tv_set"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:drawableRight="@mipmap/icon_p_jinru"
            android:layout_gravity="center_horizontal"
            android:textSize="18sp"
            android:text="设置"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"/>
        <TextView
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:id="@+id/tv_feed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:drawableRight="@mipmap/icon_p_jinru"
            android:layout_gravity="center_horizontal"
            android:textSize="18sp"
            android:text="意见反馈"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"/>
        <TextView
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:id="@+id/tv_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:drawableRight="@mipmap/icon_p_jinru"
            android:layout_gravity="center_horizontal"
            android:textSize="18sp"
            android:text="版本信息"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"/>
        <TextView
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:id="@+id/tv_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:drawableRight="@mipmap/icon_p_jinru"
            android:layout_gravity="center_horizontal"
            android:textSize="18sp"
            android:text="退出登录"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"/>
        <TextView
            android:layout_marginTop="15dp"
            android:layout_marginBottom="40dp"
            android:id="@+id/tv_zx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:drawableRight="@mipmap/icon_p_jinru"
            android:layout_gravity="center_horizontal"
            android:textSize="18sp"
            android:text="注销账号"/>
    </LinearLayout>
    </LinearLayout>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>