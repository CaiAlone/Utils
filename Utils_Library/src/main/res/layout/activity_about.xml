<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.AboutActivity">
    <include
        layout="@layout/view_top"/>
    <com.cj.splicing.utils.widget.CustomScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F6F6F6"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.cj.splicing.utils.widget.RoundImageView
                android:id="@+id/iv_app"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                app:type="round"
                app:radius="10dp"
                />

            <TextView
                android:id="@+id/tv_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:textSize="14dp"
                android:textColor="#9DA4B3"
                android:text="Version：1.0.0"/>

            <LinearLayout
                android:focusable="false"
                android:id="@+id/Linear_new"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boder_all_write_10"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:textColor="#0C0236"
                    android:layout_marginStart="20dp"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_horizontal"
                    android:textSize="15dp"
                    android:text="版本更新"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/iv_new"
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_resource_new" />
                    <TextView
                        android:layout_alignParentEnd="true"
                        android:id="@+id/tv_upVersion"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:textColor="#999999"
                        android:drawablePadding="10dp"
                        android:layout_marginRight="20dp"
                        android:gravity="center_vertical|right"
                        android:drawableRight="@mipmap/icon_jr"
                        android:layout_gravity="center_horizontal"
                        android:textSize="15dp"
                        android:text="1.0.0"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boder_all_write_10"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_xy"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textColor="#0C0236"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:drawableRight="@mipmap/icon_jr"
                    android:layout_gravity="center_horizontal"
                    android:textSize="15dp"
                    android:text="用户协议"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#E2E2E2"/>
                <TextView
                    android:id="@+id/tv_ys"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textColor="#0C0236"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:drawableRight="@mipmap/icon_jr"
                    android:layout_gravity="center_horizontal"
                    android:textSize="15dp"
                    android:text="隐私政策"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#E2E2E2"/>
                <TextView
                    android:id="@+id/tv_fk"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textColor="#0C0236"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:drawableRight="@mipmap/icon_jr"
                    android:layout_gravity="center_horizontal"
                    android:textSize="15dp"
                    android:text="反馈"/>
            </LinearLayout>

        </LinearLayout>
    </com.cj.splicing.utils.widget.CustomScrollView>
</LinearLayout>