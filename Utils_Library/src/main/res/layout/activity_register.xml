<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.RegisterActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/icon_beijingtu_login"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        />
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:scaleType="centerCrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_zhuce_txt"
            />
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="87dp"
            android:background="@mipmap/bg_kapian_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_marginTop="40dp"
                android:id="@+id/layout1"
                android:layout_marginEnd="30dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_marginStart="30dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:text="+86"
                    android:textColor="#666666"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <View
                    android:layout_marginStart="15dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/v1"
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:background="#979797"
                    android:layout_toEndOf="@+id/tv_phone"
                    />

                <EditText
                    android:id="@+id/edt_phone"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_toEndOf="@+id/v1"
                    android:background="@null"
                    android:hint="请输入手机号"
                    android:inputType="text"
                    android:lines="1"
                    android:maxLength="11"
                    android:paddingStart="10dp"
                    android:paddingEnd="18dp"
                    android:textColor="#333333"
                    android:textColorHint="#909090"
                    android:textSize="17sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_below="@+id/layout1"
                android:id="@+id/layout2"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:background="@color/white"
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edt_code"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:hint="请输入验证码"
                    android:inputType="text"
                    android:lines="1"
                    android:maxLength="6"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp"
                    android:textColor="#202020"
                    android:textColorHint="#909090"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btn_code"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="5dp"
                    android:background="@color/btn_code_true"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="获取验证码"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="40dp"
                android:layout_below="@+id/layout2"
                android:id="@+id/layout3"
                android:layout_marginEnd="30dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_marginStart="30dp"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edt_password"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:hint="请输入账户密码"
                    android:inputType="textPassword"
                    android:lines="1"
                    android:maxLength="12"
                    android:paddingStart="10dp"
                    android:paddingEnd="50dp"
                    android:textColor="#333333"
                    android:textColorHint="#909090"
                    android:textSize="17sp" />
            </RelativeLayout>
        </LinearLayout>
        <Button
            android:id="@+id/btn_login"
            android:layout_marginEnd="39dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="注册"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:background="@mipmap/icon_anniu_register"
            />
        <TextView
            android:id="@+id/tv_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="40dp"
            android:text="已有账号,去登录"
            android:textColor="#1F2714"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="40dp"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <include
            layout="@layout/view_bottom"/>
    </LinearLayout>
</RelativeLayout>